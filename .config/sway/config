# ------------------------------------------

#Bordas coloridas nas janelas
default_border pixel 1
default_floating_border pixel 1
	
	#Cores
    client.focused          #ff0000 #ff0000 #ffffff
    client.unfocused        #ff0000 #ff0000 #888888
    client.focused_inactive #ff0000 #ff0000 #888888 
    client.placeholder      #2e3440 #1f222d #888888
    client.urgent           #D08770 #D08770 #ffffff
    client.background       #000000

# --------------------------------------

#Define gaps nas janelas, para não usarem toda a tela, isso só é para
#estetica, não precisa usar.
gaps inner 10
gaps outer 0

#Bordas arredonandas (necessita do swayfx)
smart_corner_radius on
corner_radius 10

#Muda o teclado para o ABNT2
input * {
    xkb_layout br, 
    xkb_variant abnt2
}

#--------------------------------------------

#Mata o swaybg (wallpaper do sway), só use se for usar o mpvpaper
exec_always pkill swaybg

#Usa o mpvpaper para papeis de parede dinamicos como .mp4, .mkv
exec_always mpvpaper -o "no-audio loop --vo=libmpv --hwdec=auto" '*' /home/biscoito/Vídeos/waguri.mp4

# Atualiza variáveis do Wayland pro D-Bus
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP

# Inicia o backend WLR do portal / isso que faz ser possivel usar a transmissão de tela no Discord, OBS-Studio, etc
exec /usr/lib/xdg-desktop-portal-wlr &

#--------------------------------------------

include /etc/sway/config.d/*

