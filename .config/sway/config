# Biscoito config                                   
                                   
#Define a tecla Super (aquela tecla com icone do Windows)
set $mod Mod4

#Esconder e mostrar a Waybar
bindsym $mod+o exec killall -SIGUSR1 waybar

# Setas direcionais
set $left h
set $down j
set $up k
set $right l

# Terminal utilizado
set $term kitty

# Launcher de aplicativos com drun
set $menu wofi -show drun --style ~/.config/wofi/style.css

# Editor de código utilizado
set $editor geany

# ------------------------------------------------------------------

include /etc/sway/config-vars.d/*

#Tirando screenshots com Grim
set $screenshot grim ~/Images/sway_prints/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png

# Usando o swaybg para usar essa imagem como wallpaper
# output * bg /usr/share/backgrounds/sway/red.png fill

#Definindo inatividade e swaylock para bloquear a tela com senha
exec swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    before-sleep 'swaylock -f -c 000000'

#Definindo o input do touchpad (notebook)
   input "1267:12447:ELAN1200:00_04F3:309F_Touchpad" {
    tap enabled
    tap_button_map lrm
    click_method clickfinger
    middle_emulation enabled
    drag enabled
    drag_lock enabled_sticky
    natural_scroll enabled
    accel_profile adaptive
   }

# ------------------------------------------------------------------

    #Abre o Terminal
    bindsym $mod+t exec $term

    #Encerra a janela em destaque
    bindsym $mod+Shift+q kill

    #Inicia o launcher (menu de aplicativos)
    bindsym $mod+d exec $menu
    
    #Inicia o editor de codigo
    bindsym $mod+g exec $editor
    
# ------------------------------------------------------------------
    
    #Recarrega a configuração do Sway
    bindsym $mod+Shift+c reload

    # Sair do Sway
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Se movendo pelas janelas:

    # Muda o foco da janela em destaque
    # Pode ser confuso por estar reptido, porem um serve para as teclas
    # de direção normais e as outras são as teclas que definimos no
    # inicio da config, volte a linha 16
    
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

   # Move a janela em foco de posição com outras janelas
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# ------------------------------------------------------------------

#Navegando pelas áreas de trabalho
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10

#Move a janela em destaque para a area de trabalho escolhida
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

    
# ------------------------------------------------------------------    
    
#Você pode “dividir" o objeto atual sob foco usando
#$ mod+b ou $mod+v, para divisões horizontal e vertical respectivamente
    
    bindsym $mod+b splith
    bindsym $mod+v splitv

    #Coloca a janela em foco em tela cheia
    bindsym $mod+f fullscreen

    #Coloca a janela em foco no tilling ou modo flutuante
    bindsym $mod+Shift+space floating toggle

    #Muda o foco entre as janelas flutuantes e as janelas com tilling
    bindsym $mod+space focus mode_toggle

# Redimensionando janelas:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# ------------------------------------------------------------------    

# Aumentar volume
bindsym XF86AudioRaiseVolume exec pamixer --increase 10

# Diminuir volume
bindsym XF86AudioLowerVolume exec pamixer --decrease 10

# Mudo / desmudo
bindsym XF86AudioMute exec pamixer --toggle-mute

# Aumentar brilho
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

# Diminuir brilho
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

#Tirar print e copiar para area de transparencia
bindsym $mod+Shift+s exec ~/bin/screenshot.sh

# ------------------------------------------------------------------    

#Barra de Status
bar {
    position top
    # status_command while date +'%Y-%m-%d %l:%M:%S %p'; do sleep 1; done
    status_command i3status
    # swaybar_command waybar

    # colors {
    #     statusline #ff0000
    #     background #323232
    #     inactive_workspace #32323200 #32323200 #5c5c5c
    # }
}

#Encerra a barra padrão do Sway e inicia a Waybar que você personalizou
exec_always pkill waybar && waybar &

#Remove o nome da janela
for_window [class=".*"] border none

# ----------------------------------------

